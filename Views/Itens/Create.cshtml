@model EstMVC.Models.ItemViewModel
@{
    ViewBag.Title = "Novo Item";
}
@if (@TempData["Mensagem"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Mensagem"]</div>
}
<!--Configuração para exibir mensagem de erro -->
@if (@TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["MensagemErro"]</div>
}
<h2>Criar um Novo Item</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Qtd, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.Qtd, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group"></div>
        <label class="control-label col-md-2">Categoria:</label>
        <div class="col-md-6">
            @Html.DropDownListFor(model => model.Categoria, Html.GetEnumSelectList(typeof(EstMVC.Models.Enuns.CategoriaEnum)),
                     "---Selecione---", new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-6">
            <hr />
            <input type="submit" value="Salvar" class="btn btn-primary" />
        </div>
    </div>
}
<div>
    @Html.ActionLink("Retornar", "Index")
</div>